<p id="notice"><%= notice %></p>

<h1>Listing Pieces</h1>

<table>
  <thead>
    <tr>
      <th>Recording url</th>
      <th>Video url</th>
      <th>Translation</th>
      <th>Chapter</th>
      <th>Uuid</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.recording_url %></td>
        <td><%= piece.video_url %></td>
        <td><%= piece.translation %></td>
        <td><%= piece.chapter %></td>
        <td><%= piece.uuid %></td>
        <td><%= piece.position %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Piece', new_piece_path %>
