<p id="notice"><%= notice %></p>

<h1>Listing Linee Translations</h1>

<table>
  <thead>
    <tr>
      <th>Belongs to</th>
      <th>Language</th>
      <th>Content</th>
      <th>Content explanation</th>
      <th>Grammar explanation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @linee_translations.each do |linee_translation| %>
      <tr>
        <td><%= linee_translation.belongs_to %></td>
        <td><%= linee_translation.language %></td>
        <td><%= linee_translation.content %></td>
        <td><%= linee_translation.content_explanation %></td>
        <td><%= linee_translation.grammar_explanation %></td>
        <td><%= link_to 'Show', linee_translation %></td>
        <td><%= link_to 'Edit', edit_linee_translation_path(linee_translation) %></td>
        <td><%= link_to 'Destroy', linee_translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

