<p id="notice"><%= notice %></p>

<h1>Listing Lines</h1>

<table>
  <thead>
    <tr>
      <th>Chapter</th>
      <th>Font style</th>
      <th>Content</th>
      <th>Direction</th>
      <th>Position</th>
      <th>Recording url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lines.each do |line| %>
      <tr>
        <td><%= line.chapter %></td>
        <td><%= line.font_style %></td>
        <td><%= line.content %></td>
        <td><%= line.direction %></td>
        <td><%= line.position %></td>
        <td><%= line.recording_url %></td>
        <td><%= link_to 'Show', line %></td>
        <td><%= link_to 'Edit', edit_line_path(line) %></td>
        <td><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

