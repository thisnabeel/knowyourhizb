<p id="notice"><%= notice %></p>

<h1>Listing Fiqh Cases</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Position</th>
      <th>Description</th>
      <th>Fiqh case</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fiqh_cases.each do |fiqh_case| %>
      <tr>
        <td><%= fiqh_case.title %></td>
        <td><%= fiqh_case.position %></td>
        <td><%= fiqh_case.description %></td>
        <td><%= fiqh_case.fiqh_case %></td>
        <td><%= link_to 'Show', fiqh_case %></td>
        <td><%= link_to 'Edit', edit_fiqh_case_path(fiqh_case) %></td>
        <td><%= link_to 'Destroy', fiqh_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

